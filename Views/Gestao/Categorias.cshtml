@model IEnumerable<engSoftPDV.Models.Categoria>
@{
    Layout = "_LayoutAdmin";
}
<h2>Categorias</h2>
<a asp-action="NovaCategoria" asp-controller="Gestao" class= "btn btn-success">Criar Nova Categoria</a>
<hr>

<script>
    $(document).ready( function () {
    $('#categorias').DataTable();
} );
</script>

<table id="categorias" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model){
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Name</td>
                <td><button class="btn btn-primary">Editar</button> <button class="btn btn-danger">Deletar</button></td>
            </tr>
        }
    </tbody>
</table>

