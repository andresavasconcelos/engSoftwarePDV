@model engSoftPDV.DTO.CategoriaDTO;

@{
    Layout = "_LayoutAdmin";
}
<h3>Nova Categoria</h3>
<hr>
<form class="form-horizontal" asp-controller="Categorias" asp-action="Salvar" method="POST" >
    <input type="hidden" asp-for="Id" value="0"> @* não aparece, mas é requerido *@ 
    <label asp-for="Name">Nome</label>
    <input type="text" asp-for="Name" class="form-control" placeholder="Nome da Categoria">
    <span asp-validation-for="Name"></span><br />
    <button class="btn btn-success">Atualizar</button>
</form>