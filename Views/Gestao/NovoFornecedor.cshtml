@model engSoftPDV.DTO.FornecedorDTO;

@{
    Layout = "_LayoutAdmin";
}
<h3>Novo fornecedor</h3>
<hr/>
<form class="form-horizontal" asp-controller="Fornecedores" asp-action="Salvar" method="POST">
 <input type="hidden" asp-for="Id" value="0">
 <label asp-for="Name">Nome</label>
 <input type="text" asp-for="Name" class="form-control" placeholder="Nome do fornecedor">
 <span asp-validation-for="Name"></span><br>
 <label asp-for="Email">E-mail</label>
 <input type="email" asp-for="Email" class="form-control" placeholder="email@dofornecedor.com">
 <span asp-validation-for="Email"></span><br>
 <label asp-for="Tel">Telefone</label>
 <input asp-for="Tel" class="form-control" placeholder="98 9 9875-6572">
 <span asp-validation-for="Tel"></span>
 
 <br><button class="btn btn-success">Cadastrar</button>
</form>