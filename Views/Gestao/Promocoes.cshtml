@model IEnumerable<engSoftPDV.Models.Promocao>  //recebo um objeto do tipo categoria DTO*@
@{
    Layout = "_LayoutAdmin";
}

<script>
    $(document).ready(function () {
        $('#promocoes').DataTable();
    });
</script>

<h2>Produtos</h2>
<hr />
<a asp-action="NovaPromocao" asp-controller="Gestao" class="btn btn-success">Criar nova promoção</a>
<hr />

<table id="promocoes" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Produto</th>
            <th>Porcentagem</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var promocao in Model)
        {
            <tr>
                <td>@promocao.Id</td>
                <td>@promocao.Name</td>
                <td>@promocao.Produto.Name</td>
                <td>@promocao.Porcentagem</td>                
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarPromocao/@promocao.Id">Editar</a>
                    <form style="display: inline;" asp-controller="Promocoes" asp-action="Deletar">
                        <input type="hidden" name="id" id="id" value="@promocao.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
