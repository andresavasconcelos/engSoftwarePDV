@model engSoftPDV.DTO.PromocaoDTO;

@{
    Layout = "_LayoutAdmin";
}
<h3>Nome da promoção</h3>
<hr>

<form class="form-horizontal" asp-controller="Promocao" asp-action="Salvar" method="POST" >
    <input type="hidden" asp-for="Id" >  @* não aparece, mas é requerido *@ 
    
    <label asp-for="Name">Nome</label><br>
    <input type="text" asp-for="Name" class="form-control" placeholder="Nome da promoção">
    <span asp-validation-for="Name"></span><br>
    
    <label asp-for="ProdutoID">Produto</label><br>
    <select class="form-control" asp-for="ProdutoID" asp-items='@(new SelectList(@ViewBag.Promocao, "Id", "Name"))'></select>
   <span asp-validation-for="ProdutoID"></span><br> @*cri uma lista das categorias e será atribuido nome*@

    <label asp-for="Porcentagem">Porcentagem</label><br>
    <input type="number" min="0" max="100" asp-for="Porcentagem" placeholder="10%" class="form-control">
    <span asp-validation-for="Porcentagem"></span><br>

    <button class="btn btn-success">Cadastrar</button> 
</form>