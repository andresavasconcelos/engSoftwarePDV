@model engSoftPDV.DTO.PromocaoDTO;

@{
    Layout = "_LayoutAdmin";
}
<h3>Nova promoção</h3>
<hr/>

<form method="POST" asp-controller="Promocoes" asp-action="Salvar">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Name">Nome</label>
    <input type="text" asp-for="Name" class="form-control" placeholder="Nome da promoção">
    <span asp-validation-for="Name"></span><br>
    <label asp-for="ProdutoID">Produto</label>
    <select class="form-control" asp-for="ProdutoID" asp-items='@(new SelectList(@ViewBag.Produtos,"Id","Name"))'></select>
    <br>
    <label asp-for="Porcentagem">Porcentagem</label><br>
    <input type="number" min="0" max="100" asp-for="Porcentagem" placeholder="10%" class="form-control"><br>
    <button class="btn btn-success">Cadastrar</button>
</form>